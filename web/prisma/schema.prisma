// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  id     Int     @id @default(autoincrement())
  title  String
  topics Topic[]
  modals Modal[]
}

model Topic {
  id       Int      @id @default(autoincrement())
  year     String
  title    String
  subtitle String?
  authors  Author[]
  pages    Page[]
  modals   Modal[]
  course   Course?  @relation(fields: [courseId], references: [id])
  courseId Int?
}

model Author {
  id      Int    @id @default(autoincrement())
  name    String
  topic   Topic? @relation(fields: [topicId], references: [id])
  topicId Int?
}

model Page {
  id      Int     @id @default(autoincrement())
  title   String?
  html    String
  text    String
  topic   Topic?  @relation(fields: [topicId], references: [id])
  topicId Int?
  modals  Modal[]
}

model Modal {
  id       Int     @id @default(autoincrement())
  heading  String?
  html     String
  text     String
  course   Course? @relation(fields: [courseId], references: [id])
  courseId Int?
  topic    Topic?  @relation(fields: [topicId], references: [id])
  topicId  Int?
  page     Page?   @relation(fields: [pageId], references: [id])
  pageId   Int?
}
